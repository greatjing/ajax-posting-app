<div id="post-<%= post.id %>" class="panel panel-default" >
  <div class="panel-heading"><%= post.user.display_name %></div>
  <div class="panel-body">
    <span id="post-thumbsup-<%= post.id %>" class="lable label-success"><%= post.likes.count %>üëç</span>
    <!-- Ê∑ªÂä†ÊòüÊòüËØÑËÆ∫ -->
    <div class="raty">
    </div>
    <%= post.content %>
    <!-- ÁÇπËµûÂäüËÉΩ -->
    <div class="text-right">
      <span id="post-like-<%= post.id %>">
        <%= render :partial => "like", :locals => { :post => post } %>
      </span>
    </div>

    <!-- Êî∂ËóèÂäüËÉΩ -->
